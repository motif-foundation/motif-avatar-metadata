{
    "description": "This schema describes version 20210905 of the Motif Avatar Metadata Standard",
    "title": "MotifAvatar20210905",
    "$id": "https://motif.foundation/schemas/MotifAvatarMetadata.json",
    "type": "object",
    "properties": {
        "assetType": {
            "description": "Motif Asset Type",
            "examples": [
                "avatar"
            ],
            "type": "string"
        }, 
        "blockchain": {
            "description": "Blockchain of the avatar",
            "examples": [
                "Motif"
            ],
            "type": "string"
        },
        "name": {
            "description": "Name of the Avatar creator",
            "examples": [
                "My Art Gallery"
            ],
            "type": "string"
        },
        "bio": {
            "description": "Biography of the Avatar creator ",
            "examples": [
                "My art gallery has all the works I have created."
            ],
            "type": "string"
        }, 
        "website": {
            "description": "Webiste of the Avatar creator ",
            "examples": [
                "My art gallery has all the works I have created."
            ],
            "type": "string"
        }, 
        "socials": {
            "description": "Social links of the Avatar creator in stringified json object array",
            "examples": [
                "[{instagram: \"@xxx\", twitter: \"yyy\"}]"
            ],
            "type": "string"
        }, 
        "favorites": {
            "description": "Favorite nfts of the Avatar creator in stringified json array",
            "examples": [
                "[\"0x3BCE2Eb07Dd40498d61cFDdca25c3533d4efF8B0-12-space\", \"0x7BCE2Eb07Dd40498d61cFDdca25c3533d4efF8B0-11-item\"]"
            ],
            "type": "string"
        }, 
        "profileBackground": {
            "description": "Background picture ipfs url of profile",
            "examples": [
                "https://ipfs.io/xxx.png"
            ],
            "type": "string"
        },
        "followings": {
            "description": "followers and followed in in stringified json object",
            "examples": [
                "{followers:[\"0x3BCE2Eb07Dd40498d61cFDdca25c3533d4efF8B0\"], followed:[\"0x5BCE2Eb07Dd40498d61cFDdca25c3533d4efF8B0\"]}"
            ],
            "type": "string"
        }, 
        "mimeType": {
            "description": "MimeType of the avatar model",
            "examples": [
                "model/gltf-binary"
            ],
            "type": "string"
        },     
        "version": {
            "description": "Version of the schema ",
            "examples": [
                "motif-MotifAvatar20210905"
            ],
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
    	  "assetType",
        "blockchain",
        "name",
        "bio",
        "mimeType",
        "code",
        "version"
    ]
}
